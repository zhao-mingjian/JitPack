<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zmj.jitpack.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/title"
            style="@style/Match_parent"
            android:gravity="center"
            android:text="@string/app_title"
            android:textSize="@dimen/activity_text_size" />

        <EditText
            android:id="@+id/editText"
            style="@style/Match_parent"
            android:layout_below="@+id/title"
            android:text="@string/app_name" />

        <Button
            android:id="@+id/button1"
            style="@style/Match_parent"
            android:layout_below="@+id/editText"
            android:onClick="scan"
            android:text="@string/app_button1" />

        <Button
            android:id="@+id/button2"
            style="@style/Match_parent"
            android:layout_below="@+id/button1"
            android:onClick="create"
            android:text="@string/app_button2" />

        <Button
            android:id="@+id/button3"
            style="@style/Match_parent"
            android:layout_below="@+id/button2"
            android:onClick="createLogo"
            android:text="@string/app_button3" />

        <Button
            android:id="@+id/button4"
            style="@style/Match_parent"
            android:layout_below="@+id/button3"
            android:onClick="know"
            android:text="@string/app_button4" />

        <ImageView
            android:id="@+id/imageView"
            style="@style/Match_parent"
            android:layout_below="@+id/button4"
            android:src="@drawable/zhaomingjian" />
    </RelativeLayout>
</ScrollView>